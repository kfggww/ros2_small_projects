<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mvcar">

    <!-- TODOs
        1. 连杆和关键准确的物理属性
        2. gazebo仿真支持
            - 添加控制插件
    -->

    <!--轮子连杆宏-->
    <xacro:macro name="wheel_link" params="prefix">
        <link name="${prefix}_wheel_link">
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <mass value="1.0" />
                <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
            </inertial>
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <geometry>
                    <mesh filename="$(find moving_car)/meshes/wheel.stl" scale="0.001 0.001 0.001" />
                </geometry>
                <material name="wheel_material">
                    <color rgba="0.2 0.2 0.8 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <geometry>
                    <mesh filename="$(find moving_car)/meshes/wheel.stl" scale="0.001 0.001 0.001" />
                </geometry>
            </collision>
        </link>
    </xacro:macro>

    <!-- 轮子关节宏 -->
    <xacro:macro name="wheel_joint" params="prefix xyz rpy">
        <joint name="${prefix}_wheel_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}" />
            <parent link="body_link" />
            <child link="${prefix}_wheel_link" />
            <axis xyz="0.0 0.0 1.0" />
        </joint>
    </xacro:macro>

    <!-- ****************************************机器人连杆******************************************************** -->

    <!-- 车身连杆 -->
    <link name="body_link">
        <inertial>
            <origin xyz="0.0 0.0 0.02" rpy="0.0 0.0 0.0" />
            <mass value="1.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="$(find moving_car)/meshes/body.stl" scale="0.001 0.001 0.001" />
            </geometry>
            <material name="body_material">
                <color rgba="0.8 0.8 0.8 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="$(find moving_car)/meshes/body.stl" scale="0.001 0.001 0.001" />
            </geometry>
        </collision>
    </link>

    <!-- 轮子连杆 -->
    <xacro:wheel_link prefix="front_left" />
    <xacro:wheel_link prefix="front_right" />
    <xacro:wheel_link prefix="back_left" />
    <xacro:wheel_link prefix="back_right" />

    <!-- 摄像头连杆 -->
    <link name="camera_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <!-- imu连杆 -->
    <link name="imu_link">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.01 0.01 0.002" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.01 0.01 0.002" />
            </geometry>
        </collision>
    </link>

    <!-- 激光雷达连杆 -->
    <link name="lidar_link">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <cylinder radius="0.005" length="0.06" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <cylinder radius="0.005" length="0.06" />
            </geometry>
        </collision>
    </link>

    <!-- **********************************************机器人关节****************************************************************** -->

    <!-- 定义轮子关节 -->
    <xacro:wheel_joint prefix="front_left" xyz="-0.08 0.054 0.01" rpy="0 -1.5707963267948966 0" />
    <xacro:wheel_joint prefix="front_right" xyz="0.08 0.054 0.01" rpy="0 -1.5707963267948966 0" />
    <xacro:wheel_joint prefix="back_left" xyz="-0.08 -0.054 0.01" rpy="0 -1.5707963267948966 0" />
    <xacro:wheel_joint prefix="back_right" xyz="0.08 -0.054 0.01" rpy="0 -1.5707963267948966 0" />

    <!-- 摄像头关节 -->
    <joint name="camera_joint" type="fixed">
        <origin xyz="0.0 0.077 0.045" rpy="0 0.0 0.0" />
        <parent link="body_link" />
        <child link="camera_link" />
    </joint>

    <!-- imu关节 -->
    <joint name="imu_joint" type="fixed">
        <origin xyz="0.0 0.0 0.008" rpy="0.0 0.0 0.0" />
        <parent link="body_link" />
        <child link="imu_link" />
    </joint>

    <!-- lidar关节 -->
    <joint name="lidar_joint" type="fixed">
        <origin xyz="0.0 0.06 0.03" rpy="0.0 0.0 0.0" />
        <parent link="body_link" />
        <child link="lidar_link" />
    </joint>

    <!-- gazebo全局插件 -->
    <gazebo>
        <plugin filename="ignition-gazebo-imu-system" name="ignition::gazebo::systems::Imu"></plugin>
        <plugin filename="libignition-gazebo-sensors-system.so" name="ignition::gazebo::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>

    <!-- gazebo 摄像头传感器 -->
    <gazebo reference="camera_link">
        <sensor name="camera1" type="camera">
            <pose>0 0 0 0 0.7853981633974483 1.5707963267948966</pose>
            <always_on>true</always_on>
            <topic>car_camera_raw</topic>
            <camera>
                <image>
                    <width>360</width>
                    <height>240</height>
                </image>
            </camera>
        </sensor>
    </gazebo>

    <!-- gazebo IMU传感器 -->
    <gazebo reference="imu_link">
        <sensor name="imu_sensor" type="imu">
            <always_on>1</always_on>
            <update_rate>1</update_rate>
            <visualize>true</visualize>
            <topic>imu</topic>
        </sensor>
    </gazebo>

    <!-- gazebo 激光雷达传感器 -->
    <gazebo reference="lidar_link">
        <sensor name='gpu_lidar' type='gpu_lidar'>
            <pose>0 0 0.035 0 0 1.5707963267948966</pose>
            <topic>lidar</topic>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>640</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.396263</min_angle>
                        <max_angle>1.396263</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>1</samples>
                        <resolution>0.01</resolution>
                        <min_angle>0</min_angle>
                        <max_angle>0</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>0.08</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <alwaysOn>1</alwaysOn>
            <visualize>true</visualize>
        </sensor>
    </gazebo>

</robot>